<?xml version="1.0"?>
<block>
	<name>PlutoSDR Source</name>
	<key>pluto_source</key>
	<category>Industrial IO</category>
	<flags>throttle</flags>
	<import>from gnuradio import iio</import>
	<make>iio.pluto_source($uri, $frequency, $samplerate, $decimation - 1, $bandwidth, $buffer_size, $quadrature, $rfdc, $bbdc, $gain, $manual_gain, $rf_port_select, $filter)</make>
	<callback>set_params($frequency, $samplerate, $bandwidth, $quadrature, $rfdc, $bbdc, $gain, $manual_gain, "", 0.0, $rf_port_select)</callback>

	<param>
		<name>Device URI</name>
		<key>uri</key>
		<value></value>
		<type>string</type>
	</param>

	<param>
		<name>LO Frequency</name>
		<key>frequency</key>
		<value>2400000000</value>
		<type>int</type>
	</param>

	<param>
		<name>Sample rate</name>
		<key>samplerate</key>
		<value>2084000</value>
		<type>int</type>
	</param>

	<param>
		<name>RF bandwidth</name>
		<key>bandwidth</key>
		<value>20000000</value>
		<type>int</type>
	</param>

	<param>
		<name>Buffer size</name>
		<key>buffer_size</key>
		<value>0x8000</value>
		<type>int</type>
	</param>

	<param>
		<name>Decimation</name>
		<key>decimation</key>
		<value>1</value>
		<type>int</type>
	</param>

	<param>
		<name>Quadrature</name>
		<key>quadrature</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>RF DC</name>
		<key>rfdc</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>BB DC</name>
		<key>bbdc</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>Gain Mode</name>
		<key>gain</key>
		<type>enum</type>
		<option>
			<name>Manual</name>
			<key>"manual"</key>
		</option>
		<option>
			<name>Slow</name>
			<key>"slow_attack"</key>
		</option>
		<option>
			<name>Fast</name>
			<key>"fast_attack"</key>
		</option>
		<option>
			<name>Hybrid</name>
			<key>"hybrid"</key>
		</option>
	</param>

	<param>
		<name>Manual Gain (dB)</name>
		<key>manual_gain</key>
		<value>64.0</value>
		<type>real</type>
	</param>

	<param>
		<name>RF Port Select</name>
		<key>rf_port_select</key>
		<type>enum</type>
		<option>
			<name>A_BALANCED</name>
			<key>"A_BALANCED"</key>
		</option>
		<option>
			<name>B_BALANCED</name>
			<key>"B_BALANCED"</key>
		</option>
		<option>
			<name>C_BALANCED</name>
			<key>"C_BALANCED"</key>
		</option>
		<option>
			<name>A_N</name>
			<key>"A_N"</key>
		</option>
		<option>
			<name>A_P</name>
			<key>"A_P"</key>
		</option>
		<option>
			<name>B_N</name>
			<key>"B_N"</key>
		</option>
		<option>
			<name>B_P</name>
			<key>"B_P"</key>
		</option>
		<option>
			<name>C_N</name>
			<key>"C_N"</key>
		</option>
		<option>
			<name>C_P</name>
			<key>"C_P"</key>
		</option>
		<option>
			<name>TX_MONITOR1</name>
			<key>"TX_MONITOR1"</key>
		</option>
		<option>
			<name>TX_MONITOR2</name>
			<key>"TX_MONITOR2"</key>
		</option>
		<option>
			<name>TX_MONITOR1_2</name>
			<key>"TX_MONITOR1_2"</key>
		</option>
	</param>

	<param>
		<name>Filter</name>
		<key>filter</key>
		<value></value>
		<type>file_open</type>
	</param>

	<!-- Avoid divisions by zero -->
	<check>$decimation > 0</check>

	<check>$samplerate &gt;= 2084000</check>

	<source>
		<name>out</name>
		<type>complex</type>
		<nports>1</nports>
	</source>
</block>
