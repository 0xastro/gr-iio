<?xml version="1.0"?>
<block>
  <name>ADRV9371 Source</name>
  <key>iio_adrv9371_source</key>
  <category>[Industrial IO]/ADRV</category>
	<flags>throttle</flags>
	<import>from gnuradio import iio</import>
  <make>iio.adrv9371_source_f32c($uri, $frequency, $rf_bandwidth, $profile, $rx1_en, $rx2_en, $buffer_size, $gain1, $manual_gain1, $gain2, $manual_gain2)</make>
  <callback>set_params($frequency, $profile, $rf_bandwidth, $gain1, $manual_gain1, $gain2, $manual_gain2)</callback>

	<param>
		<name>IIO context URI</name>
		<key>uri</key>
		<value>local:</value>
		<type>string</type>
	</param>

	<param>
		<name>LO Frequency</name>
		<key>frequency</key>
		<value>2400000000</value>
		<type>int</type>
	</param>

	<param>
		<name>RF bandwidth</name>
		<key>rf_bandwidth</key>
		<value>20000000</value>
		<type>int</type>
	</param>

	<param>
		<name>Buffer size</name>
		<key>buffer_size</key>
		<value>0x8000</value>
		<type>int</type>
	</param>

	<param>
		<name>RX1 Enabled</name>
		<key>rx1_en</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>RX2 Enabled</name>
		<key>rx2_en</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>Gain Mode (RX1)</name>
		<key>gain1</key>
		<type>enum</type>
		<option>
			<name>Manual</name>
			<key>"manual"</key>
		</option>
    <option>
			<name>Automatic</name>
			<key>"automatic"</key>
		</option>
	</param>

	<param>
		<name>Manual Gain (RX1)(dB)</name>
		<key>manual_gain1</key>
		<value>64.0</value>
		<type>real</type>
		<hide>#if $gain1() == '"manual"' then 'none' else 'all'#</hide>
	</param>

	<param>
		<name>Gain Mode (RX2)</name>
		<key>gain2</key>
		<type>enum</type>
		<option>
			<name>Manual</name>
			<key>"manual"</key>
		</option>
		<option>
			<name>Automatic</name>
			<key>"automatic"</key>
		</option>
	</param>

	<param>
		<name>Manual Gain (RX2)(dB)</name>
		<key>manual_gain2</key>
		<value>64.0</value>
		<type>real</type>
		<hide>#if $gain2() == '"manual"' then 'none' else 'all'#</hide>
	</param>

	<param>
		<name>Profile</name>
		<key>profile</key>
		<value></value>
		<type>file_open</type>
	</param>

	<check>sum([$rx1_en, $rx2_en]) &gt; 0</check>

	<check>(len($profile))</check>

	<source>
		<name>out</name>
		<type>complex</type>
		<nports>sum([$rx1_en, $rx2_en])</nports>
	</source>
</block>
